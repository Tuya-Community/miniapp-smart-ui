    <demo-block title="图标列表"><% _.forEach(icons, function(icon) { %>
      <smart-col custom-class="col" span="6">
        <smart-icon-<%= icon %>
          size="32px"
          custom-class="icon"
        />
        <view class="text"><%= icon %></view>
      </smart-col><% }); %>
    </demo-block>
  </smart-tab>
</smart-tabs>
