      <smart-col
        custom-class="col"
        span="6"
      >
        <smart-icon-warning size="36px" custom-class="icon" />
      </smart-col>
    </demo-block>
    <demo-block title="提示信息">
      <smart-col
        custom-class="col"
        span="6"
      >
        <smart-icon-warning
          size="36px"
          custom-class="icon"
