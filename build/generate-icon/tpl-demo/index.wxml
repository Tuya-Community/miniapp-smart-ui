        custom-class="col"
        span="6"
      >
        <smart-icon-warning
          size="36px"
          custom-class="icon"
          info="9"
        />
      </smart-col>
      <smart-col
        custom-class="col"
        span="6"
      >
        <smart-icon-warning
          size="36px"
          custom-class="icon"
          info="99+"
        />
      </smart-col>
    </demo-block>
    <demo-block title="图标颜色">
      <smart-col
        custom-class="col"
        span="6"
      >
        <smart-icon-alarm
          size="36px"
          custom-class="icon"
          color="#1989fa"
        />
      </smart-col>
      <smart-col
        custom-class="col"
        span="6"
      >
        <smart-icon-warning
          size="36px"
          custom-class="icon"
          color="#07c160"
        />
      </smart-col>
    </demo-block>
    <demo-block title="图标大小">
      <smart-col
        custom-class="col"
        span="6"
      >
        <smart-icon-warning
          size="36"
          custom-class="icon"
        />
