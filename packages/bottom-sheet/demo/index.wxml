<demo-block title="{{I18n.t('basicUsage')}}" padding>
  <smart-button type="primary" bind:click="toggleActionSheet1">{{I18n.t('popupMenu')}}</smart-button>
  <smart-bottom-sheet
    title="Title"
    show="{{ show1 }}"
    bind:close="toggleActionSheet1"
    instanceId="com1"
  />
</demo-block>

<demo-block title="{{I18n.t('customize')}}" padding>
  <smart-button type="primary" bind:click="toggleActionSheet2">{{I18n.t('popupMenu')}}</smart-button>
  <smart-bottom-sheet
    show="{{ show2 }}"
    title="Title"
    bind:close="toggleActionSheet2"
    instanceId="com2"
  >
    <view class="content" />
    <view class="footer">
      <smart-button type="info" block>{{I18n.t('complete')}}</smart-button>
    </view>
  </smart-bottom-sheet>
</demo-block>

<demo-block title="{{I18n.t('maxHeight')}}" padding>
  <smart-button type="primary" bind:click="toggleActionSheet3">{{I18n.t('popupMenu')}}</smart-button>
  <smart-bottom-sheet
    show="{{ show3 }}"
    title="Title"
    bind:close="toggleActionSheet3"
    instanceId="com3"
  >
    <view style="background-color: red; height: 100px;" />
    <view style="background-color: blue; height: 100px;" />
    <view style="background-color: black; height: 100px;" />
    <view style="background-color: yellow; height: 100px;" />
    <view style="background-color: pink; height: 100px;" />
  </smart-bottom-sheet>
</demo-block>

<demo-block title="{{I18n.t('fixedHeight')}}" padding>
  <smart-button type="primary" bind:click="toggleActionSheet4">{{I18n.t('popupMenu')}}</smart-button>
  <smart-bottom-sheet
    show="{{ show4 }}"
    title="Title"
    bind:close="toggleActionSheet4"
    content-height="500px"
    instanceId="com4"
  >
  <scroll-view scroll-y style="height: 300px">
    <view style="background-color: red; height: 100px;" />
    <view style="background-color: blue; height: 100px;" />
    <view style="background-color: black; height: 100px;" />
    <view style="background-color: yellow; height: 100px;" />
    <view style="background-color: pink; height: 100px;" />
  </scroll-view>
  <view style="background-color: white; height: 100px;" />
  <view style="background-color: orange; height: 100px;" />
  </smart-bottom-sheet>
</demo-block>

<demo-block title="{{I18n.t('useTitleSlot')}}" padding>
  <smart-button type="primary" bind:click="toggleActionSheet5">{{I18n.t('popupMenu')}}</smart-button>
  <smart-bottom-sheet
    show="{{ show5 }}"
    bind:close="toggleActionSheet5"
    instanceId="com5"
  >
  <view slot="title">title</view>
  <view style="background-color: orange; height: 100px;" />
  </smart-bottom-sheet>
</demo-block>

<demo-block title="{{I18n.t('draggable')}}" padding>
  <smart-button type="primary" bind:click="toggleActionSheet6">{{I18n.t('popupMenu')}}</smart-button>
  <smart-bottom-sheet
    show="{{ show6 }}"
    bind:close="toggleActionSheet6"
    draggable
    instanceId="com6"
    close-drag-height="{{closeDragHeight}}"
    mid-drag-height="300"
  >
    <view style="background-color: red; height: 300px;" />
  </smart-bottom-sheet>
</demo-block>

<demo-block title="{{I18n.t('setTheRangeOfDragging')}}" padding>
  <smart-button type="primary" bind:click="toggleActionSheet7">{{I18n.t('popupMenu')}}</smart-button>
  <smart-bottom-sheet
    show="{{ show7 }}"
    draggable
    instanceId="com7"
    mid-drag-height="300"
    min-drag-height="300"
    max-drag-height="300"
    close-drag-height="300"
    bind:close="toggleActionSheet7"
  >
    <view style="background-color: red; height: 300px;" />
  </smart-bottom-sheet>
</demo-block>

<demo-block title="{{I18n.t('draggableWithTitle')}}" padding>
  <smart-button type="primary" bind:click="toggleActionSheet8">{{I18n.t('popupMenu')}}</smart-button>
  <smart-bottom-sheet
    title="{{I18n.t('draggableWithTitle')}}"
    show="{{ show8 }}"
    draggable
    instanceId="com8"
    mid-drag-height="300"
    min-drag-height="300"
    max-drag-height="300"
    close-drag-height="300"
    bind:close="toggleActionSheet8"
  >
    <view style="background-color: red; height: 300px;" />
  </smart-bottom-sheet>
</demo-block>

<demo-block title="{{I18n.t('listenDragPosition')}}" padding>
  <smart-button type="primary" bind:click="toggleActionSheet9">{{I18n.t('popupMenu')}}</smart-button>
  <smart-bottom-sheet
    show="{{ show9 }}"
    bind:close="toggleActionSheet9"
    draggable
    instanceId="com9"
    mid-drag-height="300"
    min-drag-height="100"
    max-drag-height="600"
    bind:drag-position="onDragPosition"
  >
    <view wx:if="{{dragPosition}}" style="margin-top: 16px; padding: 12px; background-color: #f0f0f0; border-radius: 4px;">
      <text>{{I18n.t('currentPanelPosition')}}: {{dragPositionText}}</text>
    </view>
  </smart-bottom-sheet>
</demo-block>

<demo-block title="{{I18n.t('lockMaxDrag')}}" padding>
  <smart-button type="primary" bind:click="toggleActionSheet10">{{I18n.t('popupMenu')}}</smart-button>
  <smart-bottom-sheet
    show="{{ show10 }}"
    bind:close="toggleActionSheet10"
    draggable
    instanceId="com10"
    mid-drag-height="300"
    min-drag-height="100"
    max-drag-height="400"
    lock-max-drag
    close-drag-height="{{closeDragHeight}}"
  >
    <view style="background-color: red; height: 100px;" />
    <view style="background-color: blue; height: 100px;" />
    <view style="background-color: black; height: 100px;" />
  </smart-bottom-sheet>
</demo-block>