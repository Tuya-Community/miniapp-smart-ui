<smart-tabs
  active="{{ activeTab }}"
  bind:change="onChange"
>
  <smart-tab title="基础用法">
    <smart-index-bar
      wx:if="{{ activeTab === 0 }}"
    >
      <view
        wx:for="{{ indexList }}"
        wx:for-item="item"
        wx:key="item"
      >
        <smart-index-anchor index="{{ item }}" />
        <smart-cell title="文本" />
        <smart-cell title="文本" />
        <smart-cell title="文本" />
      </view>
    </smart-index-bar>
  </smart-tab>

  <smart-tab title="自定义索引列表">
    <smart-index-bar
      wx:if="{{ activeTab === 1 }}"
      index-list="{{ customIndexList }}"
    >
      <view
        wx:for="{{ customIndexList }}"
        wx:key="index"
      >
        <smart-index-anchor
          use-slot
          index="{{ item }}"
        >
          <text>标题{{ item }}</text>
        </smart-index-anchor>
        <smart-cell title="文本" />
        <smart-cell title="文本" />
        <smart-cell title="文本" />
      </view>
    </smart-index-bar>
  </smart-tab>
</smart-tabs>
