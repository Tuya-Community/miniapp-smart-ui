<demo-block title="基础用法">
  <smart-steps
    steps="{{ steps }}"
    active="{{ active }}"
    bind:click-step="onClick"
    custom-class="demo-margin-bottom"
  />

  <smart-button custom-class="demo-margin-left" bind:click="nextStep">下一步</smart-button>
</demo-block>

<demo-block title="自定义样式">
  <smart-steps
    steps="{{ steps }}"
    active="{{ active }}"
    active-icon="{{customIcon}}"
    active-color="#38f"
    inactive-icon="{{inActiveIcon}}"
  />
</demo-block>

<demo-block title="竖向步骤条">
  <smart-steps
    steps="{{ steps }}"
    active="{{ active }}"
    direction="vertical"
    active-color="#ee0a24"
  />
</demo-block>

<smart-toast id="smart-toast" />
