<view
  class="smart-index-anchor-wrapper"
  style="{{ wrapperStyle }}"
>
  <view
    class="smart-index-anchor {{ active ? 'smart-index-anchor--active smart-hairline--bottom' : '' }}"
    style="{{ anchorStyle }}"
  >
    <slot wx:if="{{ useSlot }}"/>
    <block wx:else>
      <text>{{ index }}</text>
    </block>
  </view>
</view>
