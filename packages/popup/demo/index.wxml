<demo-block title="基础用法">
  <smart-cell title="展示弹出层" is-link bind:click="showBasic" />
  <smart-popup
    show="{{ show.basic }}"
    custom-style="padding: 30px 50px; color: var(--app-B6-N1)"
    bind:close="hideBasic"
  >
    内容
  </smart-popup>
</demo-block>

<demo-block title="弹出位置">
  <smart-cell title="顶部弹出" is-link bind:click="showTop" />
  <smart-cell title="底部弹出" is-link bind:click="showBottom" />
  <smart-cell title="左侧弹出" is-link bind:click="showLeft" />
  <smart-cell title="右侧弹出" is-link bind:click="showRight" />

  <smart-popup
    show="{{ show.top }}"
    position="top"
    custom-style="height: 20%"
    bind:close="hideTop"
  />
  <smart-popup
    show="{{ show.bottom }}"
    position="bottom"
    custom-style="height: 20%"
    bind:close="hideBottom"
  />
  <smart-popup
    show="{{ show.left }}"
    position="left"
    custom-style="width: 20%; height: 100%"
    bind:close="hideLeft"
  />
  <smart-popup
    show="{{ show.right }}"
    position="right"
    custom-style="width: 20%; height: 100%"
    bind:close="hideRight"
  />
</demo-block>

<demo-block title="关闭图标">
  <smart-cell title="关闭图标" is-link bind:click="showCloseIcon" />
  <smart-cell title="自定义图标" is-link bind:click="showCustomCloseIcon" />
  <smart-cell title="图标位置" is-link bind:click="showCustomIconPosition" />

  <smart-popup
    show="{{ show.closeIcon }}"
    closeable
    position="bottom"
    custom-style="height: 20%"
    bind:close="hideCloseIcon"
  />

  <smart-popup
    show="{{ show.customCloseIcon }}"
    closeable
    close-icon="{{ rightIcon }}"
    position="bottom"
    custom-style="height: 20%"
    bind:close="hideCustomCloseIcon"
  />

  <smart-popup
    show="{{ show.customIconPosition }}"
    closeable
    close-icon-position="top-left"
    position="bottom"
    custom-style="height: 20%"
    bind:close="hideCustomIconPosition"
  />
</demo-block>

<demo-block title="圆角弹窗">
  <smart-cell title="圆角弹窗" is-link bind:click="showRound" />

  <smart-popup
    show="{{ show.round }}"
    round
    position="bottom"
    custom-style="height: 20%"
    bind:close="hideRound"
  />
</demo-block>
