<demo-block title="{{I18n.t('basicUsage')}}">
  <smart-swipe-cell right-width="{{ 65 }}" left-width="{{ 65 }}" bind:tabClose="onTabClose">
    <view slot="left" class="smart-swipe-cell__left">{{I18n.t('choose')}}</view>
    <smart-cell-group>
      <smart-cell title="{{I18n.t('cell')}}" value="{{I18n.t('content')}}" />
    </smart-cell-group>
    <view slot="right" class="smart-swipe-cell__right">{{I18n.t('delete')}}</view>
  </smart-swipe-cell>
</demo-block>

