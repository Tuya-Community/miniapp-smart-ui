<demo-block title="基础用法">
  <smart-swipe-cell right-width="{{ 65 }}" left-width="{{ 65 }}">
    <view slot="left" class="smart-swipe-cell__left">选择</view>
    <smart-cell-group>
      <smart-cell title="单元格" value="内容" />
    </smart-cell-group>
    <view slot="right" class="smart-swipe-cell__right">删除</view>
  </smart-swipe-cell>
</demo-block>

<demo-block title="异步关闭">
  <smart-swipe-cell id="swipe-cell" right-width="{{ 65 }}" left-width="{{ 65 }}" async-close bind:close="onClose">
    <view slot="left" class="smart-swipe-cell__left">选择</view>
    <smart-cell-group>
      <smart-cell title="单元格" value="内容" />
    </smart-cell-group>
    <view slot="right" class="smart-swipe-cell__right">删除</view>
  </smart-swipe-cell>
</demo-block>

<demo-block title="主动打开">
  <smart-swipe-cell id="swipe-cell2" right-width="{{ 65 }}" left-width="{{ 65 }}" name="示例" bind:open="onOpen" >
    <view slot="left" class="smart-swipe-cell__left">选择</view>
    <smart-cell-group>
      <smart-cell title="单元格" value="内容" />
    </smart-cell-group>
    <view slot="right" class="smart-swipe-cell__right">删除</view>
  </smart-swipe-cell>
</demo-block>

