<demo-block title="基础用法">
  <smart-rate
    custom-class="rate-position"
    model:value="{{ value1 }}"
  />
</demo-block>

<demo-block title="自定义图标">
  <smart-rate
    custom-class="rate-position"
    icon="{{icon}}"
    void-icon="{{voidIcon}}"
    model:value="{{ value2 }}"
  />
</demo-block>

<demo-block title="自定义样式">
  <smart-rate
    custom-class="rate-position"
    model:value="{{ value3 }}"
    size="{{ 25 }}"
    color="#ffd21e"
    void-color="#eee"
  />
</demo-block>

<demo-block title="半星">
  <smart-rate
    custom-class="rate-position"
    model:value="{{ value4 }}"
    allow-half
    void-color="#eee"
  />
</demo-block>

<demo-block title="自定义数量">
  <smart-rate
    custom-class="rate-position"
    model:value="{{ value5 }}"
    count="{{ 6 }}"
  />
</demo-block>

<demo-block title="禁用状态">
  <smart-rate
    custom-class="rate-position"
    value="{{ value6 }}"
    disabled
  />
</demo-block>

<demo-block title="只读状态">
  <smart-rate
    custom-class="rate-position"
    value="{{ value6 }}"
    readonly
  />
</demo-block>

<demo-block title="监听 change 事件">
  <smart-rate
    custom-class="rate-position"
    value="{{ value8 }}"
    bind:change="onChange"
  />
</demo-block>

<smart-toast id="smart-toast" />
