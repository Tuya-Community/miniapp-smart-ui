<demo-block padding title="基础用法">
  <smart-button type="danger" bind:click="showNotify">基础用法</smart-button>
</demo-block>

<demo-block padding title="通知类型">
  <view class="demo-margin-bottom">
    <smart-button class="demo-margin-right" type="info" data-type="primary" bind:click="showNotifyByType">主要通知</smart-button>
    <smart-button type="primary" data-type="success" bind:click="showNotifyByType">成功通知</smart-button>
  </view>
  <view class="demo-margin-bottom">
    <smart-button class="demo-margin-right" type="danger" data-type="danger" bind:click="showNotifyByType">危险通知</smart-button>
    <smart-button type="warning" data-type="warning" bind:click="showNotifyByType">警告通知</smart-button>
  </view>
</demo-block>

<demo-block padding title="自定义通知">
  <smart-button type="primary" class="demo-margin-right" bind:click="showCustomColor">自定义颜色</smart-button>
  <smart-button type="primary" bind:click="showCustomDuration">自定义时长</smart-button>
</demo-block>

<demo-block padding title="插入状态栏高度">
  <smart-button type="primary" class="demo-margin-right" bind:click="showSafe">插入状态栏高度</smart-button>
</demo-block>

<smart-notify id="smart-notify" />
