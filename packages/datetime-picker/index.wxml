<smart-picker
  class="smart-datetime-picker"
  active-class="active-class"
  toolbar-class="toolbar-class"
  column-class="column-class"
  hairline-class="smart-datetime-picker-hairline"
  title="{{ title }}"
  columns="{{ columns }}"
  item-height="{{ itemHeight }}"
  active-style="{{ activeStyle }}"
  animation-time="{{ animationTime }}"
  show-toolbar="{{ showToolbar }}"
  visible-item-count="{{ visibleItemCount }}"
  confirm-button-text="{{ confirmButtonText }}"
  cancel-button-text="{{ cancelButtonText }}"
  change-animation="{{ changeAnimation }}"
  bind:change="onChange"
  bind:confirm="onConfirm"
  bind:cancel="onCancel"
  bind:animation-start="onAnimationStart"
  bind:animation-end="onAnimationEnd"
/>
