  <smart-tag class="demo-margin-right" type="danger">{{I18n.t('label')}}</smart-tag>
  <smart-tag class="demo-margin-right" type="danger" size="medium">{{I18n.t('label')}}</smart-tag>
  <smart-tag class="demo-margin-right" type="danger" size="large">{{I18n.t('label')}}</smart-tag>
