<demo-block title="{{I18n.t('closableTab')}}" padding>
  <smart-tag
    wx:if="{{ show.primary }}"
    class="demo-margin-right"
    type="primary"
    size="medium"
    closeable
    id="primary"
    bind:close="onClose"
  >{{I18n.t('label')}}</smart-tag
  >
  <smart-tag
    wx:if="{{ show.success }}"
    class="demo-margin-right"
    type="success"
    size="medium"
    closeable
    id="success"
    bind:close="onClose"
  >{{I18n.t('label')}}</smart-tag
  >
</demo-block>
