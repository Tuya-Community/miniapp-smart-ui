<demo-block title="基础用法">
  <smart-tabs active="{{ 1 }}" bind:change="onChange">
    <smart-tab
      wx:for="{{ tabs4 }}"
      wx:key="index"
      title="{{ '标签 ' + item }}"
    >
      <view class="content">
        {{ '内容' + item }}
      </view>
    </smart-tab>
  </smart-tabs>
</demo-block>

<demo-block title="通过名称匹配">
  <smart-tabs active="b">
    <smart-tab
      wx:for="{{ tabsWithName }}"
      wx:key="index"
      name="{{ item.name }}"
      title="{{ '标签 ' + item.index }}"
    >
      <view class="content">
        {{ '内容' + item.index}}
      </view>
    </smart-tab>
  </smart-tabs>
</demo-block>

