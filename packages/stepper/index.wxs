/* eslint-disable */
var style = require('../wxs/style.wxs');
var addUnit = require('../wxs/add-unit.wxs');

function buttonStyle(data) {
  return style({
    width: addUnit(data.buttonSize),
    height: addUnit(data.buttonSize),
  });
}

function inputStyle(data) {
  return style({
    width: addUnit(data.inputWidth),
    height: addUnit(data.buttonSize),
  });
}

function checkMin(data) {
  return data.currentValue <= Number(data.min) || data.disabled || data.disableMinus
}

function checkMax(data) {
  return data.currentValue >= Number(data.max) || data.disabled || data.disablePlus
}

module.exports = {
  buttonStyle: buttonStyle,
  inputStyle: inputStyle,
  checkMin: checkMin,
  checkMax: checkMax,
};
