<demo-block title="文字提示" padding>
  <smart-button type="primary" bind:tap="showToast" class="demo-margin-right">文字提示</smart-button>
  <smart-button type="primary" bind:tap="showLongToast">长文字提示</smart-button>
</demo-block>

<demo-block title="加载提示" padding>
  <smart-button type="primary" bind:tap="showLoadingToast" class="demo-margin-right">加载提示</smart-button>
  <smart-button type="primary" bind:tap="showCustomLoadingToast">自定义加载图标</smart-button>
</demo-block>

<demo-block title="成功/失败提示" padding>
  <smart-button type="info" bind:tap="showSuccessToast" class="demo-margin-right">成功提示</smart-button>
  <smart-button type="danger" bind:tap="showFailToast">失败提示</smart-button>
</demo-block>

<demo-block title="动态更新提示" padding>
  <smart-button type="primary" bind:tap="showCustomizedToast">动态更新提示</smart-button>
</demo-block>

<smart-toast id="smart-toast" />
