<demo-block title="自定义数值" padding>
  <smart-button type="primary" bind:click="toggleActionSheetNumber">弹出菜单</smart-button>
  <smart-action-sheet
    show="{{ showNumber }}"
    title="Title"
    cancel-text="Action"
    confirm-text="Action"
    bind:close="toggleActionSheetNumber"
    bind:cancel="toggleActionSheetNumber"
    bind:confirm="toggleActionSheetNumber"
  >
    <view class="content-number">
      <view class="demo-header">
        <text class="demo-text">{{ currentNumber }}%</text>
      </view>
      <view class="demo-slider">
        <smart-slider
          instanceId="action-sheet-slider"
          trackStyle="height:45px;border-radius:8px;"
          barStyle="height:45px;border-radius:8px;"
          thumbStyle="width:15px;height:50px;background:#BBC5D4;border:2px solid #FFFFFF;box-shadow:0px 0px 2px 0px rgba(0, 0, 0, 0.5);border-radius:2px;"
          value="{{currentNumber}}"
          bind:change="onChange"
        />
      </view>
    </view>
  </smart-action-sheet>
</demo-block>

<demo-block title="自定义滚动 Picker: {{ currentDateStr }}" padding>
  <smart-button type="primary" bind:click="toggleActionSheetPicker">弹出菜单</smart-button>
  <smart-action-sheet
    show="{{ showPicker }}"
    title="Title"
    cancel-text="Action"
    confirm-text="Action"
    bind:close="toggleActionSheetPicker"
    bind:cancel="toggleActionSheetPicker"
    bind:confirm="onPickerConfirm"
  >
    <smart-datetime-picker
      show-toolbar="{{ false }}"
      type="date"
      data-type="date"
      value="{{ currentDate }}"
      min-date="{{ minDate }}"
      bind:input="onInput"
      formatter="{{ formatter }}"
    />
  </smart-action-sheet>
</demo-block>
