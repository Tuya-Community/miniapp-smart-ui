<demo-block title="{{I18n.t('basicUsage')}}">
  <smart-goods-action custom-class="goods-action-position" safe-area-inset-bottom="{{ false }}">
    <smart-goods-action-icon
      icon="chat-o"
      text="{{I18n.t('customerService')}}"
      open-type="contact"
    />
    <smart-goods-action-icon
      icon="cart-o"
      text="{{I18n.t('shoppingCart')}}"
      bind:click="onClickIcon"
    />
    <smart-goods-action-button
      text="{{I18n.t('addToCart')}}"
      type="warning"
      bind:click="onClickButton"
    />
    <smart-goods-action-button
      text="{{I18n.t('buyNow')}}"
      bind:click="onClickButton"
    />
  </smart-goods-action>
</demo-block>

