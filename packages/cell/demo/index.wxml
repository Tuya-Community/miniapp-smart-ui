<demo-block title="基础用法">
  <smart-cell-group>
    <smart-cell title="单元格" value="内容" is-link />
    <smart-cell
      title="单元格"
      value="内容"
      label="描述信息"
      border="{{ false }}"
      is-link
    />
  </smart-cell-group>
</demo-block>

<demo-block title="卡片风格">
  <smart-cell-group inset>
    <smart-cell title="单元格" value="内容" is-link />
    <smart-cell title="单元格" value="内容" label="描述信息" border="{{ false }}" is-link />
  </smart-cell-group>
</demo-block>

<demo-block title="展示图标">
  <smart-cell
    title="单元格"
    value="内容"
    icon="{{ sunMaxFill }}"
    border="{{ false }}"
    is-link
  />
  <smart-cell
    title="自定义 Icon"
    value="内容"
    border="{{ false }}"
    is-link
  >
    <smart-icon class="cell-icon" slot="icon" name="{{ sunMaxFill }}" size="24px" color="#3678E3" />
  </smart-cell>
</demo-block>

<demo-block title="其他展示">
  <smart-cell
    title="Title"
    value="Label"
  />
  <smart-cell
    title="Title"
    is-link
  />
  <smart-cell
    title="Title"
    border="{{ false }}"
  >
    <smart-stepper value="{{ 1 }}" step="0.1" />
  </smart-cell>
</demo-block>

<demo-block title="页面跳转">
  <smart-cell title="URL跳转(navigateTo)" is-link url="/pages/dashboard/index" />
  <smart-cell title="URL重定向(redirectTo)" is-link url="/pages/dashboard/index" link-type="redirectTo" />
  <smart-cell title="打开H5容器(openInnerH5)" is-link bind:click="onNavTo" border="{{ false }}" />
</demo-block>

<demo-block title="分组标题">
  <smart-cell-group title="分组 1">
    <smart-cell title="单元格" is-link border="{{ false }}" />
  </smart-cell-group>
  <smart-cell-group title="分组 2">
    <smart-cell title="单元格" is-link border="{{ false }}" />
  </smart-cell-group>
</demo-block>

<demo-block title="其他类型">
  <smart-cell title="Title">
    <smart-switch checked="{{ true }}" size="24px" />
  </smart-cell>
  <smart-cell title="Title">
    <smart-icon name="{{ checkMark }}" color="#3678E3" size="28px" />
  </smart-cell>
  <smart-cell title="Title">
    <smart-checkbox value="{{ false }}" shape="square" />
  </smart-cell>
  <smart-cell title="Title">
    <smart-checkbox value="{{ false }}" />
  </smart-cell>
  <smart-cell
    title="Title"
    label="Bedroom"
    is-link
    border="{{ false }}"
  >
    <smart-icon
      class="cell-icon"
      slot="icon"
      name="https://static1.tuyacn.com/static/tuya-miniapp-doc/_next/static/images/logo-small.png"
      size="50px"
    />
  </smart-cell>
</demo-block>

<demo-block title="使用插槽">
  <smart-cell value="内容" icon="{{ sunMaxFill }}" is-link>
    <view slot="title">
      <view class="title">单元格</view>
      <smart-tag type="danger">标签</smart-tag>
    </view>
  </smart-cell>
  <smart-cell title="单元格" border="{{ false }}">
    <smart-icon slot="right-icon" name="{{ sunMaxFill }}" />
  </smart-cell>
</demo-block>

