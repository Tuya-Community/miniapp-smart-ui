<demo-block title="基础用法">
  <smart-slider
    value="50"
    custom-class="slider"
    bind:change="onChange"
  />
</demo-block>

<demo-block title="双滑块">
  <smart-slider
    range
    value="{{ [20, 60 ] }}"
    custom-class="slider"
    bind:change="onChange"
  />
</demo-block>

<demo-block title="指定选择范围">
  <smart-slider
    custom-class="slider"
    min="-50"
    max="50"
    bind:change="onChange"
  />
</demo-block>

<demo-block title="禁用">
  <smart-slider
    custom-class="slider"
    value="50"
    disabled
  />
</demo-block>

<demo-block title="指定步长">
  <smart-slider
    custom-class="slider"
    value="50"
    step="10"
    bind:change="onChange"
  />
</demo-block>

<demo-block title="自定义样式">
  <smart-slider
    value="50"
    custom-class="slider"
    bar-height="4px"
    active-color="#ee0a24"
  />
</demo-block>

<demo-block title="自定义按钮">
  <smart-slider
    value="{{ currentValue }}"
    custom-class="slider"
    use-button-slot
    active-color="#ee0a24"
    bind:drag="onDrag"
  >
    <view class="custom-button" slot="button">
      {{ currentValue }}
    </view>
  </smart-slider>
</demo-block>

<demo-block title="垂直方向">
  <view style="height: 150px; padding-left: 30px;">
    <smart-slider
      value="{{ 50 }}"
      vertical
      custom-class="slider"
      bind:change="onChange"
    />
    <smart-slider
      value="{{ [20, 60 ] }}"
      vertical
      range
      custom-class="slider"
      bind:change="onChange"
    />
  </view>
</demo-block>
