<demo-block title="基础用法">
  <smart-tabbar
    active="{{ active }}"
    data-key="active"
    custom-class="tabbar-position"
    safe-area-inset-bottom="{{ false }}"
    bind:change="onChange"
  >
    <smart-tabbar-item icon="{{defaultIcon1}}">标签</smart-tabbar-item>
    <smart-tabbar-item icon="{{defaultIcon2}}">标签</smart-tabbar-item>
    <smart-tabbar-item icon="{{defaultIcon3}}">标签</smart-tabbar-item>
    <smart-tabbar-item icon="{{defaultIcon4}}">标签</smart-tabbar-item>
  </smart-tabbar>
</demo-block>

<demo-block title="通过名称匹配">
  <smart-tabbar
    active="{{ active2 }}"
    data-key="active2"
    custom-class="tabbar-position"
    safe-area-inset-bottom="{{ false }}"
    bind:change="onChange"
  >
    <smart-tabbar-item name="home" icon="{{defaultIcon1}}">标签</smart-tabbar-item>
