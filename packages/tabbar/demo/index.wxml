<demo-block title="自定义图标">
  <smart-tabbar
    active="{{ active4 }}"
    data-key="active4"
    custom-class="tabbar-position"
    safe-area-inset-bottom="{{ false }}"
    bind:change="onChange"
  >
    <smart-tabbar-item info="3">
      <image
        slot="icon"
        src="{{ icon.normal }}"
        mode="aspectFit"
        style="width: 30px; height: 18px;"
      />
      <image
        slot="icon-active"
        src="{{ icon.active }}"
        mode="aspectFit"
        style="width: 30px; height: 18px;"
      />
      自定义
    </smart-tabbar-item>
    <smart-tabbar-item icon="{{defaultIcon2}}">标签</smart-tabbar-item>
    <smart-tabbar-item icon="{{defaultIcon3}}">标签</smart-tabbar-item>
  </smart-tabbar>
</demo-block>

<demo-block title="自定义颜色">
  <smart-tabbar
    active="{{ active5 }}"
