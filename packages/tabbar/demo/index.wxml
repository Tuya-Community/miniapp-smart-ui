    <smart-tabbar-item name="setting" icon="{{defaultIcon4}}">标签</smart-tabbar-item>
  </smart-tabbar>
</demo-block>

<demo-block title="显示徽标">
  <smart-tabbar
    active="{{ active3 }}"
    data-key="active3"
    custom-class="tabbar-position"
    safe-area-inset-bottom="{{ false }}"
    bind:change="onChange"
  >
    <smart-tabbar-item icon="{{defaultIcon1}}">标签</smart-tabbar-item>
    <smart-tabbar-item icon="{{defaultIcon2}}" dot>标签</smart-tabbar-item>
    <smart-tabbar-item icon="{{defaultIcon3}}" info="5">标签</smart-tabbar-item>
    <smart-tabbar-item icon="{{defaultIcon4}}" info="20">标签</smart-tabbar-item>
