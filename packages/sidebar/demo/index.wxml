<smart-grid column-num="{{ 2 }}" border="{{ false }}">
  <smart-grid-item use-slot>
    <h3 class="demo-sidebar-title">基础用法</h3>
    <smart-sidebar custom-class="custom-sidebar">
      <smart-sidebar-item title="标签名" />
      <smart-sidebar-item title="标签名" />
      <smart-sidebar-item title="标签名" />
    </smart-sidebar>
  </smart-grid-item>

  <smart-grid-item use-slot>
    <h3 class="demo-sidebar-title">徽标提示</h3>
    <smart-sidebar custom-class="custom-sidebar">
      <smart-sidebar-item title="标签名" dot />
      <smart-sidebar-item title="标签名" badge="5" />
      <smart-sidebar-item title="标签名" badge="99+" />
    </smart-sidebar>
  </smart-grid-item>

  <smart-grid-item use-slot>
    <h3 class="demo-sidebar-title">禁用选项</h3>
    <smart-sidebar custom-class="custom-sidebar">
      <smart-sidebar-item title="标签名" />
      <smart-sidebar-item title="标签名" disabled />
      <smart-sidebar-item title="标签名" />
    </smart-sidebar>
  </smart-grid-item>

  <smart-grid-item use-slot>
    <h3 class="demo-sidebar-title">监听切换事件</h3>
    <smart-sidebar custom-class="custom-sidebar" bind:change="onChange">
      <smart-sidebar-item title="标签名 1" />
      <smart-sidebar-item title="标签名 2" />
      <smart-sidebar-item title="标签名 3" />
    </smart-sidebar>
  </smart-grid-item>
</smart-grid>

<smart-toast id="smart-toast" />
