<demo-block title="{{I18n.t('basicUsage')}}" class="cascader-demo">
  <smart-field
    value="{{ baseState.result }}"
    is-link
    readonly
    label="{{I18n.t('region')}}"
    placeholder="{{ selectArea }}"
    data-state-key="baseState"
    bind:tap="onClick"
  />
  <smart-popup
    show="{{ baseState.show }}"
    round
    position="bottom"
  >
    <smart-cascader
      wx:if="{{ baseState.show }}"
      value="{{ baseState.value }}"
      title="{{ selectArea }}"
      options="{{ options }}"
      data-state-key="baseState"
      bind:close="onClose"
      bind:finish="onFinish"
    />
  </smart-popup>
</demo-block>

