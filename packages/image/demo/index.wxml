<demo-block title="基础用法" padding>
  <smart-row>
    <smart-image
      width="100"
      height="100"
      src="{{ src }}"
    />
  </smart-row>
</demo-block>

<demo-block title="填充模式" padding>
  <smart-row gutter="20">
    <smart-col
      wx:for="{{ fits }}"
      wx:for-item="fit"
      wx:key="fit"
      span="8"
    >
      <smart-image
        fit="{{ fit }}"
        width="100%"
        height="27vw"
        src="{{ src }}"
      />
      <view class="text">{{ fit }}</view>
    </smart-col>
  </smart-row>
</demo-block>

<demo-block title="圆形图片" padding>
  <smart-row gutter="20">
    <smart-col
      wx:for="{{ fits }}"
      wx:for-item="fit"
      wx:key="fit"
      span="8"
    >
      <smart-image
        round
        fit="{{ fit }}"
        width="100%"
        height="27vw"
        src="{{ src }}"
      />
      <view class="text">{{ fit }}</view>
    </smart-col>
  </smart-row>
</demo-block>

<demo-block title="加载中提示" padding>
  <smart-row gutter="20">
    <smart-col span="8">
      <smart-image
        width="100%"
        height="27vw"
      />
      <view class="text">默认提示</view>
    </smart-col>

    <smart-col span="8">
      <smart-image
        width="100%"
        height="27vw"
        use-loading-slot
      >
        <smart-loading
          slot="loading"
          type="spinner"
          size="20"
          vertical
        />
      </smart-image>
      <view class="text">自定义提示</view>
    </smart-col>
  </smart-row>
</demo-block>

<demo-block title="加载失败提示" padding>
  <smart-row gutter="20">
    <smart-col span="8">
      <smart-image
        width="100%"
        height="27vw"
        src="x"
      />
      <view class="text">默认提示</view>
    </smart-col>

    <smart-col span="8">
      <smart-image
        width="100%"
        height="27vw"
        src="x"
        use-error-slot
      >
        <text slot="error">加载失败</text>
      </smart-image>
      <view class="text">自定义提示</view>
    </smart-col>
  </smart-row>
</demo-block>
