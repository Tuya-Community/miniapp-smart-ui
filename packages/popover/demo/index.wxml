<view>

<demo-block title="{{I18n.t('basicUsage')}}">
  <view style="padding: 10vh;padding-top:0px;padding-left:8px">
    <smart-popover show="{{show}}" bind:show-change="onShow" placement="bottomLeft" custom-style="padding: 0px;width:200px;">
      <smart-button class="btnText">{{I18n.t('popupOnTheLowerLeft')}}</smart-button>
      <view slot="overlay">
        <view class="listItem" wx:for="{{[1,2,3]}}">
          <smart-icon
            class="cell-icon"
            slot="icon"
            name="{{ sunMaxFill }}"
            size="24px"
            color="#3678E3"
          />
          <text class="listText">Title</text>
        </view>
      </view>
    </smart-popover>
  </view>
  <view style="padding: 10vh;padding-top:0px;padding-left:20vw">
