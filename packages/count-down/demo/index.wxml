<demo-block title="基础用法">
  <smart-count-down time="{{ time }}" />
</demo-block>

<demo-block title="自定义格式">
  <smart-count-down
    time="{{ time }}"
    format="DD 天 HH 时 mm 分 ss 秒"
  />
</demo-block>

<demo-block title="毫秒级渲染">
  <smart-count-down
    millisecond
    time="{{ time }}"
    format="HH:mm:ss:SSS"
  />
</demo-block>

<demo-block title="自定义样式">
  <smart-count-down
    use-slot
    time="{{ time }}"
    bind:change="onChange"
  >
    <text class="item">{{ timeData.hours }}</text>
    <text class="item">{{ timeData.minutes }}</text>
    <text class="item">{{ timeData.seconds }}</text>
  </smart-count-down>
</demo-block>

<demo-block title="手动控制">
  <smart-count-down
    class="control-count-down"
    millisecond
    time="{{ 3000 }}"
    auto-start="{{ false }}"
    format="ss:SSS"
    bind:finish="finished"
  />
  <smart-grid clickable column-num="3">
    <smart-grid-item text="开始" icon="play-circle-o" bindclick="start" />
    <smart-grid-item text="暂停" icon="pause-circle-o" bindclick="pause" />
    <smart-grid-item text="重置" icon="replay" bind:click="reset" />
  </smart-grid>
</demo-block>

<smart-toast id="smart-toast" />
