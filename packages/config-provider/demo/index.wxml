        设置颜色
      </smart-button>
      <smart-button type="primary" data-color="green" color="green" bind:click="onChange">
        设置颜色
      </smart-button>
      <smart-button type="primary" data-color="blue" color="blue" bind:click="onChange">
        设置颜色
      </smart-button>
    </view>
