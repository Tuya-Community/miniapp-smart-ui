/* eslint-disable */
var style = require('../wxs/style.wxs');
var addUnit = require('../wxs/add-unit.wxs');

function textStyle(data) {
  var ret = style({
    'font-size': addUnit(data.textSize),
    color: data.color,
  });

  return ret;
}

function loadingStyle(data) {
  var iconSrc = '';

  if (data.type === 'spinner') {
    iconSrc = data.spinner;
  }

  if (data.type === 'circular') {
    iconSrc = data.circular;
  }

  var imageBase64Src = "url('" + iconSrc + "')";
  var ret = style({
    '-webkit-mask-image': imageBase64Src,
    '-webkit-mask-size': addUnit(data.size),
    width: addUnit(data.size),
    height: addUnit(data.size),
  });

  return ret;
}

module.exports = {
  textStyle: textStyle,
  loadingStyle: loadingStyle,
};
