<wxs src="../wxs/utils.wxs" module="utils" />
<wxs src="./index.wxs" module="computed" />

<view class="custom-class smart-empty">
  <view class="smart-empty__image">
    <slot name="image"></slot>
  </view>
  <view class="smart-empty__image">
    <image wx:if="{{ image }}" class="smart-empty__image__img" src="{{ computed.imageUrl(image) }}" />
  </view>

  <view class="smart-empty__description">
    <slot name="description"></slot>
  </view>
  <view class="smart-empty__description">
    {{ description }}
  </view>

  <view class="smart-empty__bottom">
    <slot></slot>
  </view>
</view>
