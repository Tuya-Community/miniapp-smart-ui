<demo-block title="基础用法" padding>
  <smart-switch
    checked="{{ checked }}"
    bind:change="onChange"
  />
</demo-block>

<demo-block title="禁用状态" padding>
  <smart-switch
    checked="{{ checked }}"
    disabled
    bind:change="onChange"
  />
</demo-block>

<demo-block title="加载状态" padding>
  <smart-switch
    checked="{{ checked }}"
    loading
    bind:change="onChange"
  />
</demo-block>

<demo-block title="自定义大小" padding>
  <smart-switch
    checked="{{ checked }}"
    size="24px"
    bind:change="onChange"
  />
</demo-block>

<demo-block title="自定义颜色" padding>
  <smart-switch
    checked="{{ checked }}"
    active-color="#07c160"
    inactive-color="#ee0a24"
    bind:change="onChange"
  />
</demo-block>

<demo-block title="异步控制" padding>
  <smart-switch
    checked="{{ checked2 }}"
    size="36px"
    bind:change="onChange2"
  />
</demo-block>

<demo-block title="未阻止冒泡" padding>
  <view bind:tap="onClick">
    <smart-switch
      checked="{{ checked }}"
      bind:change="onChange"
    />
  </view>
</demo-block>

<demo-block title="阻止冒泡" padding>
  <view bind:tap="onClick">
    <smart-switch
      checked="{{ checked }}"
      stop-click-propagation="{{ true }}"
      bind:change="onChange"
    />
  </view>
</demo-block>

<smart-dialog id="smart-dialog" />
