<demo-block title="基本用法">
  <smart-grid>
    <smart-grid-item icon="photo-o" text="文字" wx:for="{{ array4 }}" wx:key="*this" />
  </smart-grid>
</demo-block>

<demo-block title="自定义列数">
  <smart-grid column-num="3">
    <smart-grid-item icon="photo-o" text="文字" wx:for="{{ array6 }}" wx:key="*this" />
  </smart-grid>
</demo-block>

<demo-block title="自定义内容">
  <smart-grid column-num="3" border="{{ false }}">
    <smart-grid-item use-slot wx:for="{{ array3 }}" wx:for-item="index" wx:key="*this">
      <image style="width: 90px; height: 90px;" src="https://static1.tuyacn.com/static/tuya-miniapp-doc/_next/static/images/logo-small.png" />
    </smart-grid-item>
  </smart-grid>
</demo-block>

<demo-block title="正方形格子">
  <smart-grid square>
    <smart-grid-item icon="photo-o" text="文字" wx:for="{{ array8 }}" wx:key="*this" />
  </smart-grid>
</demo-block>

<demo-block title="格子间距">
  <smart-grid gutter="{{ 10 }}">
    <smart-grid-item icon="photo-o" text="文字" wx:for="{{ array8 }}" wx:key="*this" />
  </smart-grid>
</demo-block>

<demo-block title="内容横排">
  <smart-grid direction="horizontal" column-num="3">
    <smart-grid-item icon="photo-o" text="文字" wx:for="{{ array3 }}" wx:key="*this" />
  </smart-grid>
</demo-block>

<demo-block title="页面跳转">
  <smart-grid clickable column-num="2">
    <smart-grid-item icon="home-o" link-type="navigateTo" url="/pages/dashboard/index" text="Navigate 跳转" />
    <smart-grid-item icon="search" link-type="reLaunch" url="/pages/dashboard/index" text="ReLaunch 跳转" />
  </smart-grid>
</demo-block>

<demo-block title="徽标提示">
  <smart-grid column-num="2">
    <smart-grid-item icon="home-o" text="文字" dot />
    <smart-grid-item icon="search" text="文字" badge="99+" />
  </smart-grid>
</demo-block>
