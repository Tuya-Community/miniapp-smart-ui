.demo-home {
  box-sizing: border-box;
  width: 100%;
  min-height: 100vh;
  padding: 46px 20px 20px;
  background: var(--app-B3);
  color: var(--app-B1-N1);
}

.demo-home__title {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 32px;
}

.demo-home__image,
.demo-home__text {
  display: inline-block;
  vertical-align: middle;
}

.demo-home__image {
  width: 88px;
  height: 88px;
  margin-bottom: 12px;
}

.demo-home__text {
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40rpx;
}

.demo-home__title .demo-home--small {
  font-size: 24px;
}